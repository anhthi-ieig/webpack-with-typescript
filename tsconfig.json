{
  "compilerOptions": {
    "outDir": "public",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "config/**/*",
    "src/**/*",
    "typings/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ],
}